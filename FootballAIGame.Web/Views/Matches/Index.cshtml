@model IEnumerable<FootballAIGame.Web.Models.Match>
@{
    ViewBag.Title = "Matches";
}

<h2 class="text-center">
    Matches
</h2>

<table id="match-table" class="table table-responsive table-hover">
    <thead>
    <tr>
        <th>Date</th>
        <th>Player1</th>
        <th>Player2</th>
        <th>Score</th>
        <th>Details</th>
    </tr>
    </thead>
    @foreach (var match in Model)
    {
        <tr>
            <td>@match.Time</td>
            <td><a href="/players/details/@match.Player1.Name">@match.Player1.Name</a></td>
            <td><a href="/players/details/@match.Player2.Name">@match.Player2.Name</a></td>
            <td>@match.Score</td>
            <td><a href="/Matches/Details/@(match.Id)">Details</a></td>
        </tr>
    }
</table>

@section scripts {
    <script>
        $(document).ready(function() {
            $("#match-table").DataTable({
                "order": [[0, "desc"]]
            });
        });
    </script>
}
